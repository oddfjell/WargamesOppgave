<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<BorderPane minHeight="800.0" minWidth="1200.0" prefHeight="800.0" prefWidth="1200.0" style="-fx-background-color: linear-gradient(from 25% 25% to 100% 100%, #000000, #98948c);" xmlns="http://javafx.com/javafx/18" xmlns:fx="http://javafx.com/fxml/1" fx:controller="WGames.Controller.NewArmyController">
    <center>
        <VBox alignment="CENTER" minHeight="800.0" minWidth="1200.0" prefHeight="800.0" prefWidth="1200.0" BorderPane.alignment="CENTER">
            <children>
                <HBox alignment="CENTER" minHeight="800.0" minWidth="1200.0" prefHeight="800.0" prefWidth="1200.0">
                    <children>
                        <AnchorPane minHeight="800.0" minWidth="1200.0" prefHeight="800.0" prefWidth="1200.0" stylesheets="@../styles.css">
                            <children>
                                <Button fx:id="back" layoutX="11.0" layoutY="11.0" mnemonicParsing="false" onAction="#backButtonClicked" style="-fx-background-color: transparent;" text="back" textFill="WHITE">
                                    <font>
                                        <Font name="Papyrus" size="36.0" />
                                    </font>
                                </Button>
                        <ComboBox fx:id="unitType" layoutX="161.0" layoutY="188.0" prefHeight="55.0" prefWidth="239.0" styleClass="Combobox" stylesheets="@../styles.css" />
                        <TextField fx:id="name" layoutX="488.0" layoutY="188.0" prefHeight="55.0" prefWidth="225.0" styleClass="TextField" stylesheets="@../styles.css" />
                        <Text fill="WHITE" layoutX="410.0" layoutY="221.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Name:">
                           <font>
                              <Font name="Papyrus" size="25.0" />
                           </font>
                        </Text>
                        <Text fill="WHITE" layoutX="718.0" layoutY="221.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Health:">
                           <font>
                              <Font name="Papyrus" size="25.0" />
                           </font>
                        </Text>
                        <TextField fx:id="health" layoutX="805.0" layoutY="186.0" prefHeight="55.0" prefWidth="98.0" styleClass="TextField" stylesheets="@../styles.css" />
                        <Text fill="WHITE" layoutX="37.0" layoutY="221.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Unit type:">
                           <font>
                              <Font name="Papyrus" size="25.0" />
                           </font>
                        </Text>
                        <Button fx:id="addUnitButton" layoutX="20.0" layoutY="356.0" mnemonicParsing="false" onAction="#addUnitButtonClicked" style="-fx-background-color: transparent;" text="add this unit" textFill="WHITE">
                           <font>
                              <Font name="Papyrus" size="30.0" />
                           </font>
                        </Button>
                        <Text fill="WHITE" layoutX="37.0" layoutY="135.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Army name:">
                           <font>
                              <Font name="Papyrus" size="25.0" />
                           </font>
                        </Text>
                        <TextField fx:id="armyName" layoutX="171.0" layoutY="97.0" prefHeight="55.0" prefWidth="201.0" styleClass="TextField" stylesheets="@../styles.css" />
                        <Button fx:id="standardUnitBox" layoutX="259.0" layoutY="356.0" mnemonicParsing="false" onAction="#makeStandardUnit" style="-fx-background-color: transparent;" text="make a standard unit" textFill="WHITE">
                           <font>
                              <Font name="Papyrus" size="30.0" />
                           </font>
                        </Button>
                        <Text fx:id="standardUnitText" fill="WHITE" layoutX="37.0" layoutY="595.0" strokeType="OUTSIDE" strokeWidth="0.0">
                           <font>
                              <Font name="Papyrus" size="36.0" />
                           </font>
                        </Text>
                        <TextField fx:id="amount" layoutX="146.0" layoutY="275.0" prefHeight="55.0" prefWidth="98.0" styleClass="TextField" stylesheets="@../styles.css" />
                        <Text fill="WHITE" layoutX="37.0" layoutY="314.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Amount:">
                           <font>
                              <Font name="Papyrus" size="25.0" />
                           </font>
                        </Text>
                            </children>
                        </AnchorPane>
                    </children>
                </HBox>
            </children>
        </VBox>
    </center>
</BorderPane>
